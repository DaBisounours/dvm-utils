        "esModuleInterop": true,
        "declaration": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}